MACHINE ASSERT_TRUEx

DEFINITIONS
 EXTERNAL_PREDICATE_ASSERT_TRUE == BOOL * STRING;
 ASSERT_TRUE(P,Msg) == (1=1)
VARIABLES xx
INVARIANT
 xx:NATURAL & 
 ASSERT_TRUE(bool(xx<10),"xx has reached 10")
INITIALISATION xx:=0
OPERATIONS
  Increment = SELECT xx<20 & ASSERT_TRUE(bool(xx<11),"xx has reached 11") THEN xx := xx+5 END

END


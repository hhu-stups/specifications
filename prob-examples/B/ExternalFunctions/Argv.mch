MACHINE Argv
DEFINITIONS
  ARGV(x) == "";
  EXTERNAL_FUNCTION_ARGV == INTEGER --> STRING;
  ARGC == 0;
  EXTERNAL_FUNCTION_ARGC == INTEGER;
VARIABLES x
INVARIANT x:NATURAL
INITIALISATION x:= ARGC
OPERATIONS
  a <-- GetArgv1 = BEGIN a := ARGV(1) END;
  r <-- GetArgc = BEGIN r := ARGC END ;
  dec = SELECT x>0 THEN x := x-1 END
END
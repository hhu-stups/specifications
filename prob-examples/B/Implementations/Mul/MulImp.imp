IMPLEMENTATION
   MulImp
REFINES Mul
//ABSTRACT_CONSTANTS aa PROPERTIES aa=10
OPERATIONS
 res <-- Mult(a,b) =
  VAR tot,x,y IN
     tot := 0; x:= a; y:= b;
     WHILE x>0 DO
       IF x mod 2 = 1 THEN
         tot := tot+y
       END;
       x := x/2;
       IF x>0 THEN y := y*2 END
     INVARIANT x:NAT & y:NAT &    /* THIS CAN BE VIOLATED without the IF x>0 above ! */
               tot:NAT & tot+x*y = a*b
     VARIANT x
     END;
     res := tot
  END
END
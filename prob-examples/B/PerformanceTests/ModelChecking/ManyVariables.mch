MACHINE ManyVariables
VARIABLES x01,x02,x03,x04,x05
INVARIANT
 x01:INTEGER & x02:INTEGER & x03:INTEGER & x04 :INTEGER & x05: INTEGER
INITIALISATION x01,x02,x03,x04,x05 := 0,0,0,0,0
OPERATIONS
  Inc01 = PRE x01 < 1000 THEN x01 := x01 + 1 END;
  Inc02 = PRE x02 < 100 & x01 = 1000 THEN x02 := x02 + 1 || x01 := 0 END;
  Inc03 = PRE x03 < 3  & x01 = 1000 THEN x03 := x03 + 1 || x01 := 0 END
END

